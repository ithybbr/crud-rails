<p style="color: green"><%= notice %></p>

<% content_for :title, "Country" %>

<h1>Countries
<%= link_to "New country", new_country_path, class:'button-4', id:'tb' %>
</h1>
<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Population</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @country.each do |country| %>
      <tr>
        <td><%= country.cname %></td>
        <td><%= country.population %></td>
        <td><%= link_to 'Edit', edit_country_path(country) , class:'button-4'%></td>
        <td><%= button_to 'Destroy', country, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class:'button-4' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
