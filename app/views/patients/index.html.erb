<p style="color: green"><%= notice %></p>

<% content_for :title, "Patients" %>

<h1>Patients
  <%= link_to "New patient", new_patient_path, class:'button-4', id:'tb' %>
</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.email %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class:'button-4' %></td>
        <td><%= button_to 'Destroy', patient, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class:'button-4' %></td>
      </tr>
    <% end %>
  </tbody>
</table>