<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<h1>Users

<%= link_to "New user", new_user_path, class:'button-4', id:'tb' %>
</h1>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Surname</th>  
      <th>Phone</th>  
      <th>Country</th>
      <th>Salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.phone %></td>
        <td><%= user.cname %></td>
        <td><%= user.salary %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:'button-4' %></td>
        <td><%= button_to 'Destroy', user, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class:'button-4' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
