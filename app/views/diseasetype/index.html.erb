<p id="notice"><%= notice %></p>

<h1>Diseasetype

<%= link_to 'New Diseasetype', new_diseasetype_path, class:'button-4', id:'tb' %>
</h1>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diseasetype.each do |diseasetype| %>
      <tr>
        <td><%= diseasetype.id %></td>
        <td><%= diseasetype.description %></td>
        <td><%= link_to 'Edit', edit_diseasetype_path(diseasetype), class:'button-4'%></td>
        <td><%= button_to 'Destroy', diseasetype, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class:'button-4'%></td>
      </tr>
    <% end %>
  </tbody>
</table>