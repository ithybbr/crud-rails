<p style="color: green"><%= notice %></p>

<% content_for :title, "Doctor" %>

<h1>Doctor

<%= link_to "New doctor", new_doctor_path, class:'button-4', id:'tb' %>
</h1>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Degree</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctor.each do |doctor| %>
      <tr>
        <td><%= doctor.email %></td>
        <td><%= doctor.degree %></td>
        <td><%= link_to 'Edit', edit_doctor_path(id: doctor.id, email: doctor.email), class:'button-4' %></td>
        <td><%= button_to 'Destroy', doctor, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class:'button-4' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
