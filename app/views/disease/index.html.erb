<p style="color: green"><%= notice %></p>

<% content_for :title, "Disease" %>

<h1>Disease

<%= link_to "New disease", new_disease_path, class:'button-4', id:'tb' %>
</h1>
<table>
  <thead>
    <tr>
      <th>Id</th> 
      <th>Disease code</th>
      <th>Pathogen</th>
      <th>Description</th>
      <th colspan="3"></th>  
    </tr>
  </thead>

  <tbody>
    <% @disease.each do |disease| %>
      <tr>
        <td><%= disease.id_disease %></td>
        <td><%= disease.disease_code %></td>
        <td><%= disease.pathogen %></td>
        <td><%= disease.description %></td>
        <td><%= link_to 'Edit', edit_disease_path(disease.disease_code), class:'button-4' %></td>
        <td><%= button_to 'Destroy', disease_path(disease.disease_code), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class:'button-4' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
