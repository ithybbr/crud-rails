<p style="color: green"><%= notice %></p>

<% content_for :title, "Record" %>

<h1>Record

<%= link_to "New record", new_record_path, class:'button-4', id:'tb' %>
</h1>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th >Country</th>
      <th >Disease Code</th> 
      <th >Total deaths</th> 
      <th >Total patients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @record.each do |record| %>
      <tr>
        <td><%= record.email %></td>
        <td><%= record.cname %></td>
        <td><%= record.disease_code %></td>
        <td><%= record.total_deaths %></td>
        <td><%= record.total_patients %></td>
        <td><%= link_to 'Edit', edit_record_path(email: record.email, disease_code: record.disease_code, cname: record.cname), class:'button-4' %></td>
        <td><%= button_to 'Destroy', record_path(email: record.email, disease_code: record.disease_code, cname: record.cname), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class:'button-4' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
